{
  "name": "@laneshare/bridge",
  "version": "1.0.0",
  "description": "LaneShare Bridge Agent - Connects Codespaces to LaneShare for real-time collaboration",
  "main": "./dist/index.js",
  "bin": {
    "laneshare-bridge": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/cli.ts src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/cli.ts src/index.ts --format cjs,esm --dts --watch",
    "start": "node dist/cli.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "eventsource": "^2.0.2",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@types/eventsource": "^1.1.15",
    "@types/node": "^20.11.16",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "laneshare",
    "codespaces",
    "claude",
    "ai",
    "bridge"
  ]
}
